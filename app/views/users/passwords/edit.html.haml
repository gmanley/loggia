= simple_form_for(@user, url: user_password_path, method: :put) do |f|
  %fieldset
    %legend Change password
    = f.hidden_field :reset_password_token
    = f.input :password, label: 'New Password'
    = f.input :password_confirmation, label: 'Confirm new password'
    .form-actions
      = f.button :submit, 'Change password', class: 'btn-primary'
      = link_to 'Cancel', :back, class: 'btn'

  = render partial: 'users/shared/links'
