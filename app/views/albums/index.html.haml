#recent_albums.well
  - content_for(:head, auto_discovery_link_tag(:atom, root_url(format: :atom)))
  = link_to(root_url(format: :atom), class: 'rss-link') do
    %i.icon-rss.icon-2x

  %h3 Recently Updated
  = render partial: @recent_albums, cache: true

#albums.grid-container
  = render partial: @albums, cache: true

- if can?(:create, Album)
  = link_to('New Album', new_album_path, class: 'btn btn-primary')
