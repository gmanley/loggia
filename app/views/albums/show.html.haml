%header.page-header
  %h1
    = @album.title
    = render partial: 'favorites/links', locals: {parent_resource: @album} if can? :manage, Favorite
  = render partial: 'containers/header_actions', locals: {container: @album} if can? :manage, @album

= render 'images/form' if can? :create, Image

%ul.thumbnails{data: {toggle: 'modal-gallery', target: '#modal-gallery'}}
  = render partial: 'images/image', collection: @images
= paginate @images

#comments.row-fluid
  %header.page-header
    %h3 Comments
  = render 'comments/form' if can? :create, Comment
  %ol.unstyled#comments-list= render partial: 'comments/comment', collection: @album.comments

= render 'images/modal'