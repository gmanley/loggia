%h2.page-header
  = @album.title
  %span.header-actions
    = link_to('Edit', edit_category_album_path(@category, @album)) + " | " if can? :edit, Album
    = link_to('Destroy', category_album_path(@category, @album), confirm: 'Are you sure?', method: :delete) if can? :destroy, Album

- breadcrumbs(breadcrumb_paths)

- if can? :create, Image
  %p Add Images:
  = render 'images/form'
%ul.thumbnails{data: {toggle: 'modal-gallery', target: '#modal-gallery'}}
  = render partial: 'images/image', collection: @images
= paginate @images

#modal-gallery.modal.modal-gallery.hide.fade
  .modal-header
    %a.close{data: {dismiss: 'modal'}} Ã—
    %h3.modal-title
  .modal-body
    .modal-image
  .modal-footer
    %a.btn.btn-primary.modal-next
      Next
      %i.icon-arrow-right.icon-white
    %a.btn.btn-info.modal-prev
      %i.icon-arrow-left.icon-white
      Previous
