%h2.page-header
  = @album.title
  %span.header-actions
    = link_to('Edit', edit_category_album_path(@category, @album)) + " | " if can? :edit, Album
    = link_to('Destroy', category_album_path(@category, @album), confirm: 'Are you sure?', method: :delete) if can? :destroy, Album

- breadcrumbs(breadcrumb_paths)

- if can? :create, Image
  %p Add Images:
  = render 'images/form'
%ul.thumbnails
  = render partial: 'images/image', collection: @images
= paginate @images
