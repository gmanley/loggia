%h2.page-header
  = @category.title
  - if can?(:edit, @category) or can?(:destroy, @category)
    = render partial: 'containers/header_actions', locals: {container: @category}

- breadcrumbs(breadcrumb_paths)

- unless @children.empty?
  %ul.thumbnails
    = render partial: 'containers/container', collection: @children

%hr
.row
  .span3
    - if can? :create, Category
      = form_for(Category.new) do |f|
        %fieldset
          %legend New Subcategory
          = render partial: 'containers/form', locals: {f: f}
          = f.hidden_field :parent_id, value: @category.id
          = f.submit 'Create', class: 'btn btn-primary'

  .span3
    - if can? :create, Album
      = form_for(Album.new) do |f|
        %fieldset
          %legend New Child Album:
          = render partial: 'containers/form', locals: {f: f}
          = f.hidden_field :parent_id, value: @category.id
          = f.submit 'Create', class: 'btn btn-primary'
