= form_for(@category) do |f|
  %fieldset
    %legend Editing Category
    .clearfix
      = f.label :title
      .input
        = f.text_field :title
    .clearfix
      = f.label :description
      .input
        = f.text_field :description
    .clearfix
      = f.label :hidden
      .input
        = f.check_box :hidden
    .actions
      = f.submit 'Save', class: 'btn btn-primary'

= link_to 'Show', @category
