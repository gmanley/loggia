source 'http://rubygems.org'

# Bundle edge Rails instead:
gem 'rails', '>= 3.1.0.rc'

# Asset template engines
gem 'sass-rails', '>= 3.1.0.rc'
gem 'coffee-script'
gem 'uglifier'

gem 'jquery-rails'
gem 'rails-backbone'
gem 'haml-rails'

# Maybe use this in the future?
# gem 'decent_exposure'

gem 'mongoid'
gem 'bson_ext'
gem 'mongoid_slug'
gem 'oa-oauth'

gem 'carrierwave', :git => 'https://github.com/jnicklas/carrierwave.git'
gem 'rack-gridfs', :git => 'https://github.com/skinandbones/rack-gridfs.git', :require => 'rack/gridfs'

gem 'rspec-rails', :group => [:development, :test]

group :development do
  gem 'rails-footnotes', :git => 'https://github.com/josevalim/rails-footnotes.git'
  gem 'rails-dev-boost', :git => 'git://github.com/thedarkone/rails-dev-boost.git', :require => 'rails_development_boost'
end

group :test do
  gem 'database_cleaner'
  gem 'mongoid-rspec'
  gem 'factory_girl_rails', '>= 1.1.rc'
end
